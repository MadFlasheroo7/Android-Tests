<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Allows us to override platform level specific attributes -->
    <style name="Platform.Theme.AndroidTests" parent="Theme.Material3.DynamicColors.DayNight">
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.AndroidTests" parent="Platform.Theme.AndroidTests">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/teal_700</item>
    </style>

    <style name="Theme.AndroidTests.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AndroidTests.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AndroidTests.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>